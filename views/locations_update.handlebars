<h1>Update Location</h1>
<div>
  <form method="POST">
    <div>
      <label>Country</label>
      <select name="country">
        {{#each countries}}
          <option value="{{this.id }}">{{this.name}}</option>
        {{/each}}
      </select>
    </div>

    <div>
      <label>City</label>
      <select name="city">
        {{#each cities}}
          <option value="{{this.id}}">{{this.name}}</option>
        {{/each}}
      </select>
    </div>
    <input type="hidden" value={{id}} name="id" />
    <input type="submit" />
  </form>
</div>
